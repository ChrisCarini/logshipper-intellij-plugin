<idea-plugin>
    <id>com.chriscarini.jetbrains.logshipper</id>
    <name>logshipper-intellij-plugin</name>
    <vendor email="chris@chriscarini.com" url="https://jetbrains.chriscarini.com">Chris Carini</vendor>

    <description><![CDATA[
    A JetBrains IntelliJ IDEA plugin to ship logs to a remote logstash service.
    ]]></description>

    <idea-version since-build="181" until-build="*"/>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable bundle="messages.logshipper" groupId="other"
                                 instance="com.chriscarini.jetbrains.logshipper.configuration.LogshipperConfigurable"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>com.chriscarini.jetbrains.logshipper.LogstashLayoutAppenderComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.chriscarini.jetbrains.logshipper.ConstantLogEntryTesterComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.chriscarini.jetbrains.logshipper.configuration.SettingsManager</implementation-class>
        </component>
    </application-components>
</idea-plugin>